mixin accessibility-checkbox-mixin(options)
    label.checkbox-line
    label.checkbox
      input.checkbox__input(
        type='checkbox'
      )
      .checkbox__box
        .checkbox__mark
      .check
        span.checkbox-text.checkbox-text_access= options.text || 'accessibility-checkbox text'
        span.checkbox-text.checkbox-text_access-caption!= options.caption || 'accessibility-checkbox caption'
